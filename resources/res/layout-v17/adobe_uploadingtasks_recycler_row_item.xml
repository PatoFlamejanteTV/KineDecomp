<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:weightSum="7">
    <ImageView
        android:id="@+id/upload_asset_img"
        android:layout_width="@dimen/upload_preview_width"
        android:layout_height="@dimen/upload_preview_width"
        android:scaleType="centerInside"/>
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="6"
        android:layout_weight="6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/adobe_csdk_asset_detail_blackBackGround"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/upload_asset_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <TextView
                android:textSize="10sp"
                android:textColor="@color/adobe_csdk_grayText"
                android:id="@+id/upload_asset_text_status"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"/>
            <ProgressBar
                android:id="@+id/uploading_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxHeight="20dp"
                android:max="100"
                android:minHeight="20dp"
                style="?android:attr/progressBarStyleHorizontal"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/upload_cancel_layout"
        android:padding="8dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/upload_cancel_image"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_close_black_24dp"/>
    </LinearLayout>
</LinearLayout>
