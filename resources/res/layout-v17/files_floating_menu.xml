<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/adobe_files_alpha_pane"
        android:background="@color/adobe_csdk_fab_menu_expanded"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/adobe_files_uploadFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="6dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        fab:elevation="6dp"
        fab:fab_addButtonColorNormal="@color/adobe_csdk_fab_icon_color"
        fab:fab_labelStyle="@style/AdobeFloatingButtonLabelStyle"
        fab:pressedTranslationZ="12dp">
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/adobe_files_uploadImages"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            fab:fab_colorNormal="@android:color/white"
            fab:fab_icon="@drawable/ic_upload_images_grey_24dp"
            fab:fab_size="mini"
            fab:fab_title="@string/adobe_csdk_UPLOAD_IMAGE_TO_LIBRARY_MENU_TITLE"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/adobe_files_uploadAction"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            fab:fab_colorNormal="@android:color/white"
            fab:fab_icon="@drawable/ic_upload_grey_24dp"
            fab:fab_size="mini"
            fab:fab_title="@string/adobe_csdk_UPLOAD_ASSET_BROWSER_BUTTON"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/adobe_files_createFolder"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            fab:fab_colorNormal="@android:color/white"
            fab:fab_icon="@drawable/ic_create_folder_grey_24dp"
            fab:fab_size="mini"
            fab:fab_title="@string/adobe_csdk_CREATE_NEW_FOLDER_TITLE"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/adobe_files_takePhoto"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            fab:fab_colorNormal="@android:color/white"
            fab:fab_icon="@drawable/ic_take_photo_white_24dp"
            fab:fab_size="mini"
            fab:fab_title="@string/adobe_csdk_UPLOAD_ASSET_FROM_CAMERA_BUTTON"/>
    </com.getbase.floatingactionbutton.FloatingActionsMenu>
</RelativeLayout>
