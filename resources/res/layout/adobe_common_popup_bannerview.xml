    android:layout_width="match_parent"
    android:layout_height="@dimen/adobe_csdk_common_popup_bannerview_layout_height"
    android:alpha="0.6">
    <com.adobe.creativesdk.foundation.internal.utils.CreativeSDKTextView
        android:textSize="@dimen/adobe_csdk_common_popup_bannerview_text_size"
