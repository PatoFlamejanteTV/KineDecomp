<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/shape_image"
        android:padding="@dimen/layer_shape_item_padding"
        android:layout_width="@dimen/layer_shape_item_size"
        android:layout_height="@dimen/layer_shape_item_size"
        android:scaleType="centerInside"/>
    <ImageView
        android:id="@+id/selected"
        android:layout_width="@dimen/layer_shape_item_selected_mark_size"
        android:layout_height="@dimen/layer_shape_item_selected_mark_size"
        android:src="@drawable/ic_check_circle"
        android:scaleType="centerInside"
        android:layout_centerInParent="true"/>
</RelativeLayout>
