<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/pedit_background_color"
    android:padding="3dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.nextreaming.nexeditorui.NexEditText
        android:textSize="25sp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:id="@+id/textinput"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@+id/buttonHolder"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:inputType="textMultiLine"
        android:imeOptions="flagNoExtractUi"/>
    <ImageButton
        android:textColor="#ffffffff"
        android:id="@+id/button_font"
        android:background="@android:color/transparent"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:src="@drawable/btn_font_selector"
        android:scaleType="center"
        android:layout_alignTop="@+id/textinput"
        android:layout_alignRight="@+id/textinput"
        android:layout_alignBottom="@+id/textinput"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/buttonHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="30dp"
        android:layout_alignTop="@+id/textinput"
        android:layout_alignBottom="@+id/textinput"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <Button
            android:textSize="18dp"
            android:textColor="#ffffffff"
            android:layout_gravity="center_vertical"
            android:id="@+id/button_ok"
            android:background="@drawable/fullscreeninput_btn_bg"
            android:paddingLeft="20dp"
            android:paddingTop="6dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:text="@string/button_ok"/>
        <Button
            android:textSize="18dp"
            android:textColor="#ffffffff"
            android:layout_gravity="center_vertical"
            android:id="@+id/button_cancel"
            android:background="@drawable/fullscreeninput_btn_bg"
            android:paddingLeft="20dp"
            android:paddingTop="6dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:text="@string/button_cancel"/>
    </LinearLayout>
</RelativeLayout>
