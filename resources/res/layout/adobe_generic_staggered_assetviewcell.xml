<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/adobe_csdk_assetview_assetgrid_assetcell_root"
    android:background="@drawable/storage_assetcell_background_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/FocusableViewWhiteBg">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/staggeredCellLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/adobe_csdk_assetview_assetgrid_assetcell_imageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.adobe.creativesdk.foundation.internal.storage.controllers.utils.AdobeDynamicHeightImageView
                android:gravity="center"
                android:id="@+id/adobe_csdk_assetview_assetgrid_assetcell_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:minHeight="@dimen/adobe_csdk_storage_assetslist_selector_btn_width"
                android:layout_centerInParent="true"/>
            <TextView
                android:textColor="@color/adobe_csdk_asset_detail_white"
                android:id="@+id/adobe_csdk_assetview_file_extension"
                android:background="@color/adobe_csdk_blue_color"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="120dp"/>
            <ImageButton
                android:id="@+id/adobe_csdk_assetview_assetgrid_assetcell_selectbtn"
                android:background="@null"
                android:visibility="gone"
                android:layout_width="@dimen/adobe_csdk_storage_assetslist_selector_btn_width"
                android:layout_height="@dimen/adobe_csdk_storage_assetslist_selector_btn_width"
                android:src="@drawable/storage_grid_assetcell_select_btn_selector"
                android:scaleType="center"
                android:layout_alignBottom="@+id/adobe_csdk_assetview_assetgrid_assetcell_imageView"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/adobe_csdk_files_thin_line"
            android:background="@color/adobe_csdk_asset_ux_application_background_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/adobe_csdk_assetview_assetgrid_assetcell_bottom_title_section"
            android:background="@color/adobe_csdk_transparent_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/adobe_csdk_assetbrowser_grid_text_height"
            android:layout_marginLeft="@dimen/adobe_csdk_assetbrowser_photo_catalog_gridview_textview_margin_left">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:id="@+id/adobe_csdk_assetview_assetgrid_assetcell_bottom_title_section_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.adobe.creativesdk.foundation.internal.utils.CreativeSDKTextView
                    android:textSize="@dimen/adobe_csdk_assetbrowser_grid_text_size"
                    android:textColor="@color/adobe_csdk_asset_browser_dark_text"
                    android:ellipsize="middle"
                    android:id="@+id/adobe_csdk_assetview_assetgrid_assetcell_title"
                    android:background="@color/adobe_csdk_transparent_color"
                    android:paddingBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:singleLine="true"
                    android:layout_weight="55"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/adobe_csdk_assetvire_bottom_video_layout"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/adobe_csdk_assetview_assetgrid_assetcell_video_indicator"
                        android:paddingRight="4dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/video_indicator"
                        android:layout_weight="10"/>
                    <com.adobe.creativesdk.foundation.internal.utils.CreativeSDKTextView
                        android:textSize="13sp"
                        android:ellipsize="marquee"
                        android:gravity="end"
                        android:id="@+id/adobe_csdk_assetview_assetgrid_assetcell_video_duration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_weight="15"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/adobe_csdk_assetview_bottom_info_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/adobe_csdk_assetview_file_icon"
                        android:background="@color/adobe_csdk_transparent_color"
                        android:paddingRight="4dp"
                        android:visibility="gone"
                        android:layout_width="@dimen/shared_icon_dimension"
                        android:layout_height="@dimen/shared_icon_dimension"
                        android:src="@drawable/ic_lightroom_24dp"
                        android:tint="@color/adobe_csdk_theme_color_light_text"/>
                    <com.adobe.creativesdk.foundation.internal.utils.CreativeSDKTextView
                        android:textSize="@dimen/folder_cell_count_size"
                        android:textColor="@color/adobe_csdk_theme_color_light_text"
                        android:ellipsize="middle"
                        android:layout_gravity="center"
                        android:id="@+id/adobe_csdk_assetview_photo_count"
                        android:background="@color/adobe_csdk_transparent_color"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.adobe.creativesdk.foundation.internal.utils.CreativeSDKTextView
                        android:textSize="@dimen/folder_cell_count_size"
                        android:textColor="@color/adobe_csdk_theme_color_light_text"
                        android:ellipsize="middle"
                        android:id="@+id/adobe_csdk_assetview_file_size"
                        android:background="@color/adobe_csdk_transparent_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"/>
                    <com.adobe.creativesdk.foundation.internal.utils.CreativeSDKTextView
                        android:textSize="@dimen/folder_cell_count_size"
                        android:textColor="@color/adobe_csdk_theme_color_light_text"
                        android:ellipsize="middle"
                        android:id="@+id/adobe_csdk_assetview_file_modified_date"
                        android:background="@color/adobe_csdk_transparent_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/adobe_csdk_files_menu_icon"
                android:layout_width="50sp"
                android:layout_height="match_parent"
                style="@style/ContextMenuClickableLyt">
                <ImageView
                    android:id="@+id/adobe_csdk_asset_browser_cell_menu_icon"
                    android:paddingRight="@dimen/adobe_csdk_3dot_icon_padding"
                    android:layout_height="@dimen/adobe_csdk_3dot_icon_height"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    style="@style/ContextMenuBtn"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
