<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/effectIcon"
        android:layout_width="@dimen/effect_list_icon_size"
        android:layout_height="@dimen/effect_list_icon_size"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/test_icon"/>
    <TextView
        android:textSize="@dimen/effect_list_text_size"
        android:id="@+id/effectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Effect List 01"/>
</LinearLayout>
