<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/InfoTextHolder"
        android:paddingTop="6dp"
        android:paddingBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true">
        <TextView
            android:textSize="18dp"
            android:textColor="@color/export_text_color"
            android:id="@+id/qualityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#7f000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="@integer/project_gallery_details_text_shadow_radius"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/export_text_color"
            android:id="@+id/qualityDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#7f000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="@integer/project_gallery_details_text_shadow_radius"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/InfoTextHolder"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true">
        <ImageButton
            android:id="@+id/filePlayButton"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:src="@drawable/export_file_list_play"/>
        <ImageButton
            android:id="@+id/fileShareButton"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:src="@drawable/export_file_list_share"/>
        <ImageButton
            android:id="@+id/fileDeleteButton"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/export_file_list_delete"/>
    </LinearLayout>
</RelativeLayout>
