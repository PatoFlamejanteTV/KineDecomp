<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false">
    <RelativeLayout
        android:id="@+id/parentHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:splitMotionEvents="false">
        <RelativeLayout
            android:id="@+id/default_right_panel_holder"
            android:background="@drawable/default_r_control_panel_bg"
            android:layout_width="@dimen/right_panel_circle_wh"
            android:layout_height="@dimen/right_panel_circle_wh"
            android:layout_marginLeft="@dimen/right_panel_circle_marginleft"
            android:layout_marginTop="@dimen/right_panel_circle_margintop"
            android:layout_below="@+id/btn_complete"
            android:splitMotionEvents="false">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/mediabrowser_button_holder"
                android:background="@drawable/r_panel_btn_top_bg"
                android:clickable="true"
                android:layout_width="@dimen/default_r_buttonHolder_topBottom_width"
                android:layout_height="@dimen/default_r_buttonHolder_topBottom_height"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="9dp"
                android:layout_alignParentTop="true">
                <ImageView
                    android:id="@+id/mediabrowser_icon"
                    android:layout_width="@dimen/default_r_panel_icon_size"
                    android:layout_height="@dimen/default_r_panel_icon_size"
                    android:src="@drawable/r_panel_btn_mediabrowser"/>
                <TextView
                    android:textSize="@dimen/default_r_panel_text_size"
                    android:textColor="@color/default_r_panel_text_color"
                    android:id="@+id/mediabrowser_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_menu_mediabrowser"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/voicerecord_button_holder"
                android:background="@drawable/r_panel_btn_bottom_bg"
                android:clickable="true"
                android:layout_width="@dimen/default_r_buttonHolder_topBottom_width"
                android:layout_height="@dimen/default_r_buttonHolder_topBottom_height"
                android:layout_marginLeft="36dp"
                android:layout_marginBottom="9dp"
                android:layout_alignParentBottom="true">
                <ImageView
                    android:id="@+id/voicerecord_icon"
                    android:layout_width="@dimen/default_r_panel_icon_size"
                    android:layout_height="@dimen/default_r_panel_icon_size"
                    android:src="@drawable/r_panel_btn_voicerecord"/>
                <TextView
                    android:textSize="@dimen/default_r_panel_text_size"
                    android:textColor="@color/default_r_panel_text_color"
                    android:id="@+id/voice_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_menu_voice"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/layer_button_holder"
                android:background="@drawable/r_panel_btn_left_bg"
                android:clickable="true"
                android:layout_width="@dimen/default_r_buttonHolder_leftRight_width"
                android:layout_height="@dimen/default_r_buttonHolder_leftRight_height"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35.5dp"
                android:layout_alignParentLeft="true">
                <ImageView
                    android:id="@+id/layer_icon"
                    android:layout_width="@dimen/default_r_panel_icon_size"
                    android:layout_height="@dimen/default_r_panel_icon_size"
                    android:src="@drawable/r_panel_btn_layer"/>
                <TextView
                    android:textSize="@dimen/default_r_panel_text_size"
                    android:textColor="@color/default_r_panel_text_color"
                    android:id="@+id/layer_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_menu_layer"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/audiobrowser_button_holder"
                android:background="@drawable/r_panel_btn_right_bg"
                android:clickable="true"
                android:layout_width="@dimen/default_r_buttonHolder_leftRight_width"
                android:layout_height="@dimen/default_r_buttonHolder_leftRight_height"
                android:layout_marginTop="35.5dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/audiobrowser_icon"
                    android:layout_width="@dimen/default_r_panel_icon_size"
                    android:layout_height="@dimen/default_r_panel_icon_size"
                    android:src="@drawable/r_panel_btn_audiobrowser"/>
                <TextView
                    android:textSize="@dimen/default_r_panel_text_size"
                    android:textColor="@color/default_r_panel_text_color"
                    android:id="@+id/audio_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_menu_audio"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/btn_camera"
                android:background="@drawable/r_panel_btn_camera_bg"
                android:layout_width="@dimen/right_panel_circle_button_wh"
                android:layout_height="@dimen/right_panel_circle_button_wh"
                android:layout_marginLeft="@dimen/right_panel_circle_button_margin"
                android:layout_marginTop="@dimen/right_panel_circle_button_margin"
                android:src="@drawable/default_r_btn_camera"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/right_panel_camera_holder"
            android:visibility="gone"
            android:layout_width="@dimen/right_panel_circle_wh"
            android:layout_height="@dimen/right_panel_circle_wh"
            android:layout_marginLeft="@dimen/right_panel_circle_marginleft"
            android:layout_marginTop="@dimen/right_panel_circle_margintop"
            android:layout_below="@+id/btn_complete"
            android:splitMotionEvents="false">
            <ImageView
                android:id="@+id/camera_holder_background"
                android:background="@drawable/control_panel_camera_bg"
                android:layout_width="@dimen/right_panel_circle_wh"
                android:layout_height="@dimen/right_panel_circle_wh"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/camera_button_holder"
                android:background="@drawable/r_panel_btn_camera_left_bg"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="76dp"
                android:layout_height="157dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7.4dp"
                android:layout_alignParentLeft="true">
                <ImageView
                    android:id="@+id/camera_icon"
                    android:layout_width="@dimen/default_r_panel_icon_size"
                    android:layout_height="@dimen/default_r_panel_icon_size"
                    android:layout_marginRight="11dp"
                    android:src="@drawable/r_panel_camera_icon"/>
                <TextView
                    android:textSize="@dimen/default_r_panel_text_size"
                    android:textColor="@color/camera_text_color"
                    android:gravity="center_horizontal"
                    android:id="@+id/camera_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="11dp"
                    android:text="@string/default_menu_camera"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/camcorder_button_holder"
                android:background="@drawable/r_panel_btn_camcorder_right_bg"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="76dp"
                android:layout_height="157dp"
                android:layout_marginTop="7.4dp"
                android:layout_marginRight="7dp"
                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/camcorder_icon"
                    android:layout_width="@dimen/default_r_panel_icon_size"
                    android:layout_height="@dimen/default_r_panel_icon_size"
                    android:layout_marginLeft="11dp"
                    android:src="@drawable/r_panel_camcorder_icon"/>
                <TextView
                    android:textSize="@dimen/default_r_panel_text_size"
                    android:textColor="@color/camera_text_color"
                    android:id="@+id/camcorder_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:text="@string/default_menu_camcorder"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/camera_icon_forAnimation"
                android:background="@android:color/transparent"
                android:layout_width="@dimen/right_panel_circle_button_wh"
                android:layout_height="@dimen/right_panel_circle_button_wh"
                android:layout_marginLeft="@dimen/right_panel_circle_button_margin"
                android:layout_marginTop="@dimen/right_panel_circle_button_margin"
                android:src="@drawable/default_r_btn_camera"/>
            <ImageButton
                android:id="@+id/btn_camera_back"
                android:background="@drawable/r_panel_btn_camera_back_bg"
                android:layout_width="@dimen/right_panel_circle_button_wh"
                android:layout_height="@dimen/right_panel_circle_button_wh"
                android:layout_marginLeft="@dimen/right_panel_circle_button_margin"
                android:layout_marginTop="@dimen/right_panel_circle_button_margin"
                android:src="@drawable/r_panel_btn_camera_back"/>
        </RelativeLayout>
        <View
            android:id="@+id/multi_touch_zone"
            android:clickable="true"
            android:layout_width="@dimen/right_panel_circle_wh"
            android:layout_height="@dimen/right_panel_circle_wh"
            android:layout_marginLeft="@dimen/right_panel_circle_marginleft"
            android:layout_marginTop="@dimen/right_panel_circle_margintop"
            android:layout_below="@+id/btn_complete"/>
        <ImageButton
            android:id="@+id/btn_complete"
            android:background="@android:color/transparent"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/pedit_option_margin_bottom_complete_btn"
            android:src="@drawable/r_panel_btn_complete"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"/>
        <ImageButton
            android:id="@+id/btn_settings"
            android:background="@android:color/transparent"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/pedit_option_margin_top_settings_btn"
            android:src="@drawable/r_panel_btn_settings"
            android:scaleType="centerCrop"
            android:layout_below="@+id/multi_touch_zone"
            android:layout_alignParentRight="true"/>
        <ImageButton
            android:id="@+id/btn_playpause"
            android:background="@android:color/transparent"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/pedit_option_margin_top_settings_btn"
            android:src="@drawable/r_panel_btn_playpause"
            android:scaleType="centerCrop"
            android:layout_below="@+id/multi_touch_zone"
            android:layout_alignParentRight="true"/>
        <ImageButton
            android:id="@+id/btn_itemstore"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/pedit_option_margin_top_settings_btn"
            android:src="@drawable/r_panel_btn_itemstore"
            android:scaleType="centerCrop"
            android:layout_below="@+id/multi_touch_zone"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>
</LinearLayout>
