<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/new_project_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/kineIconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/n3_icon_big"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="14dp"/>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_kinemaster_about_logo"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="33dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/buttonHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.nexstreaming.kinemaster.ui.widget.TransparentTextButton
            android:textColor="@color/project_gallery_details_text_color"
            android:gravity="center"
            android:id="@+id/websiteButton"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/support_website_btn"
            android:textAlignment="center"/>
        <Space
            android:layout_width="30.3dp"
            android:layout_height="match_parent"/>
        <com.nexstreaming.kinemaster.ui.widget.TransparentTextButton
            android:textColor="@color/project_gallery_details_text_color"
            android:gravity="center"
            android:id="@+id/emailSupportButton"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/support_email_btn"
            android:textAlignment="center"/>
    </LinearLayout>
</LinearLayout>
