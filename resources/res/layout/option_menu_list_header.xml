<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/optmenu_header"
    android:background="@color/optmenu_header_background_color"
    android:layout_width="match_parent"
    android:layout_height="43dp">
    <View
        android:background="@color/pedit_background_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <View
        android:background="@color/optmenu_header_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <com.nexstreaming.app.general.util.IconView
        android:id="@+id/optmenu_back"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:src="@drawable/opt_back"
        android:scaleType="centerInside"
        android:layout_alignParentLeft="true"
        android:alpha="0.4"/>
    <ImageView
        android:id="@+id/optmenu_icon"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:scaleType="centerInside"
        android:layout_toRightOf="@+id/optmenu_back"/>
    <TextView
        android:textSize="13dp"
        android:textStyle="bold"
        android:textColor="@color/optmenu_header_text_color"
        android:ellipsize="end"
        android:id="@+id/descTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="43dp"
        android:singleLine="true"
        android:layout_toRightOf="@+id/optmenu_icon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <View
        android:id="@+id/descSeparator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:textSize="11dp"
        android:textStyle="bold"
        android:textColor="@color/optmenu_header_text_color"
        android:ellipsize="end"
        android:id="@+id/descTitleSm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="43dp"
        android:singleLine="true"
        android:layout_above="@+id/descSeparator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"/>
    <TextView
        android:textSize="9dp"
        android:textColor="@color/optmenu_header_text_color"
        android:ellipsize="end"
        android:id="@+id/descSubtitleSm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="43dp"
        android:singleLine="true"
        android:layout_below="@+id/descSeparator"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"/>
    <ImageButton
        android:id="@+id/optionMenuDone"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:src="@drawable/optmenu_done"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
