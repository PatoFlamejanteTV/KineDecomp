<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/optmenu_background_color"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/separator"
        android:background="@color/pedit_background_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">
        <com.nexstreaming.app.general.util.IconView
            android:id="@+id/opt1"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:layout_width="16.9dp"
            android:layout_height="16.9dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            app:iconColor="@color/optmenu_item_text_color"/>
        <View
            android:id="@+id/div1"
            android:background="@color/pedit_background_color"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <com.nexstreaming.app.general.util.IconView
            android:id="@+id/opt2"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:layout_width="16.9dp"
            android:layout_height="16.9dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            app:iconColor="@color/optmenu_item_text_color"/>
        <View
            android:id="@+id/div2"
            android:background="@color/pedit_background_color"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <com.nexstreaming.app.general.util.IconView
            android:id="@+id/opt3"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:layout_width="16.9dp"
            android:layout_height="16.9dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            app:iconColor="@color/optmenu_item_text_color"/>
        <View
            android:id="@+id/div3"
            android:background="@color/pedit_background_color"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <com.nexstreaming.app.general.util.IconView
            android:id="@+id/opt4"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:layout_width="16.9dp"
            android:layout_height="16.9dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            app:iconColor="@color/optmenu_item_text_color"/>
    </LinearLayout>
</RelativeLayout>
