<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:c="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/frag_account_info_marginLeftAndRight"
        android:layout_marginTop="12dp"
        android:layout_marginRight="@dimen/frag_account_info_marginLeftAndRight"
        android:layout_marginBottom="@dimen/frag_account_info_free_btn_holder_marginTop">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/layout_account_info_product_views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.nexstreaming.kinemaster.ui.widget.ProductView
                android:layout_gravity="bottom"
                android:id="@+id/product_view_first"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                c:productButtonText="@string/buy_now"/>
            <com.nexstreaming.kinemaster.ui.widget.ProductView
                android:layout_gravity="bottom"
                android:id="@+id/product_view_second"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                c:productButtonText="@string/buy_now"/>
            <com.nexstreaming.kinemaster.ui.widget.ProductView
                android:layout_gravity="bottom"
                android:id="@+id/product_view_third"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                c:productButtonText="@string/buy_now"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/layout_account_info_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/frag_account_info_text_size_s"
                android:textColor="@color/settings_extratext"
                android:id="@+id/tv_account_info_error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/frag_account_info_free_btn_holder_marginTop"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp">
                <Button
                    android:textSize="@dimen/product_view_title_text_size"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/btn_layout_account_info_signin"
                    android:background="@drawable/selector_product_view_default"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/product_view_buy_button_height"
                    android:layout_marginRight="3.5dp"
                    android:text="@string/service_login_required"
                    android:layout_weight="1"/>
                <Button
                    android:textSize="@dimen/product_view_title_text_size"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/btn_layout_account_info_retry"
                    android:background="@drawable/selector_product_view_default"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/product_view_buy_button_height"
                    android:layout_marginLeft="3.5dp"
                    android:text="@string/retry"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/button_sub_promo"
        android:background="@drawable/selector_product_view_default"
        android:layout_width="match_parent"
        android:layout_height="@dimen/frag_account_info_free_promo_height"
        android:layout_marginLeft="@dimen/frag_account_info_marginLeftAndRight"
        android:layout_marginRight="@dimen/frag_account_info_marginLeftAndRight"
        android:layout_marginBottom="@dimen/frag_account_info_free_btn_holder_marginTop">
        <TextView
            android:textSize="@dimen/sub_bottom_btn_text_size"
            android:textColor="@color/project_gallery_details_text_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_account_info_promo"
            android:paddingLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/sub_use_promotion_code"
            android:singleLine="true"
            android:shadowColor="@color/project_gallery_details_text_shadow"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:drawableLeft="@drawable/icon_ticket"
            android:drawablePadding="10dp"/>
    </FrameLayout>
</LinearLayout>
