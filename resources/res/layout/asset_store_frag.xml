<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/pale_grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
        android:id="@+id/assetCategoryList"
        android:background="@color/charcoal_grey"
        android:layout_width="@dimen/my_asset_main_category_width"
        android:layout_height="match_parent"
        android:listSelector="@drawable/store_main_cat_selector"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:choiceMode="singleChoice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:fadeScrollbars="false"
        android:nextFocusForward="@+id/assetCategoryViewPager"
        android:layout_alignParentStart="true"/>
    <com.nexstreaming.kinemaster.ui.store.view.AssetListViewPager
        android:id="@+id/assetCategoryViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/assetCategoryList"
        android:layout_toEndOf="@+id/assetCategoryList"/>
</RelativeLayout>
