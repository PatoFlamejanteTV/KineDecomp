<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/video_preview_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">
        <VideoView
            android:layout_gravity="center"
            android:id="@+id/video_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <ImageButton
        android:id="@+id/button_play"
        android:background="@android:color/transparent"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/btn_play"
        android:scaleType="center"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/camcording_margin_bottom_for_btns"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <Button
            android:textSize="20dp"
            android:textColor="@color/text_color_white_grey_for_camcording"
            android:gravity="center"
            android:id="@+id/button_reject"
            android:background="@drawable/camcording_btn"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="52.6dp"
            android:layout_marginRight="20dp"
            android:minWidth="142dp"
            android:text="@string/camera_preview_retake"
            android:shadowColor="@color/project_gallery_details_text_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textAlignment="center"/>
        <Button
            android:textSize="20dp"
            android:textColor="@color/text_color_white_grey_for_camcording"
            android:gravity="center"
            android:id="@+id/button_accept"
            android:background="@drawable/camcording_btn"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="52.6dp"
            android:minWidth="142dp"
            android:text="@string/camera_preview_use"
            android:shadowColor="@color/project_gallery_details_text_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textAlignment="center"/>
        <Button
            android:textSize="20dp"
            android:textColor="@color/text_color_white_grey_for_camcording"
            android:gravity="center"
            android:id="@+id/button_accept_layer"
            android:background="@drawable/camcording_btn"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="52.6dp"
            android:layout_marginLeft="20dp"
            android:minWidth="142dp"
            android:text="@string/camera_preview_use_as_layer"
            android:shadowColor="@color/project_gallery_details_text_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textAlignment="center"/>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/busy_indicator"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_centerInParent="true"/>
</RelativeLayout>
