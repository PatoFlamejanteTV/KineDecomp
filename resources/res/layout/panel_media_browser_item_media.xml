<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:gravity="center"
        android:id="@+id/media_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <ImageView
        android:layout_gravity="top|left"
        android:id="@+id/imageView_support_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"/>
    <ImageView
        android:layout_gravity="top|right"
        android:id="@+id/icon_favorite"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_content_favorite_activate"/>
    <ImageView
        android:layout_gravity="bottom|left"
        android:id="@+id/imageView_content_type"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/icon_content_not_support"/>
    <ImageView
        android:background="@drawable/img_new_project_round_rectangle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
