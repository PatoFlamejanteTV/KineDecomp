<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/subCategoryList"
        android:background="#ff303640"
        android:nextFocusRight="@+id/assetGridView"
        android:layout_width="@dimen/asset_store_sub_category_width"
        android:layout_height="match_parent"
        android:listSelector="@drawable/store_sub_cat_selector"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:choiceMode="singleChoice"/>
    <com.nexstreaming.kinemaster.ui.store.view.AssetListViewPager
        android:id="@+id/asset_list_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/subCategoryList"
        android:layout_toEndOf="@+id/subCategoryList"/>
</LinearLayout>
