<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/optmenu_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/option_menu_list_header"/>
    <RelativeLayout
        android:id="@+id/crop_menu_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.nexstreaming.kinemaster.ui.projectedit.StateRelativeLayout
            android:gravity="top"
            android:id="@+id/crop_menu_feather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/pedit_option_menu_text_size_small"
                android:textColor="@color/km_white"
                android:gravity="center_vertical"
                android:id="@+id/crop_menu_feather_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/opt_layer_crop_feather"
                android:drawablePadding="10dp"/>
            <com.nexstreaming.kinemaster.ui.projectedit.Slider
                android:id="@+id/crop_menu_feather_slider"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/crop_menu_feather_label"
                android:layout_alignParentLeft="true"
                app:centerMark="false"
                app:defaultValue="0"
                app:maxValue="50"
                app:minValue="0"
                app:orientation="horizontal"
                app:snapAt="0"
                app:snapSize="@dimen/slider_snap_size"
                app:step="5"
                app:thumbColor="@color/slider_dark_thumb"
                app:thumbRadius="@dimen/slider_thumb_radius"
                app:thumbTextSize="@dimen/slider_thumb_text_size"
                app:trackActiveColor="@color/slider_dark_track_active"
                app:trackDefaultColor="@color/slider_light_track_base"
                app:trackSize="@dimen/slider_track_size"
                app:value="0"
                app:valueStyle="unsinged"/>
        </com.nexstreaming.kinemaster.ui.projectedit.StateRelativeLayout>
        <TextView
            android:textSize="@dimen/pedit_option_menu_text_size"
            android:textColor="@color/km_white"
            android:id="@+id/crop_menu_alert_text"
            android:background="#80000000"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/opt_layer_crop_mask_alert"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/shape_list_container"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/gridView_masks"
            android:scrollbars="vertical"
            android:fadingEdgeLength="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollingCache="true"
            android:horizontalSpacing="1dp"
            android:verticalSpacing="1dp"
            android:numColumns="3"
            android:fadeScrollbars="true"
            android:requiresFadingEdge="vertical"/>
        <ImageView
            android:id="@+id/listViewDirectionDown"
            android:background="@android:color/transparent"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_list_arrow_bottom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/listViewDirectionUp"
            android:background="@android:color/transparent"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_list_arrow_top"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>
