<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mediabrowser_item_layout_height"
    android:layout_margin="@dimen/mediabrowser_gridview_padding_bottom">
    <ImageView
        android:id="@+id/folder_image"
        android:layout_width="@dimen/mediabrowser_item_layout_width"
        android:layout_height="match_parent"
        android:src="@drawable/panel_media_browser_folder_item_background_fill_mask"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/folder_image_transparent"
        android:background="@drawable/panel_media_browser_folder_item_background_line"
        android:layout_width="@dimen/mediabrowser_item_layout_width"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/special_img_folder_image"
        android:background="@drawable/special_folder_bg"
        android:layout_width="@dimen/mediabrowser_item_layout_width"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/special_img_folder_icon"
        android:layout_width="@dimen/mediabrowser_icon_view_width"
        android:layout_height="@dimen/mediabrowser_icon_view_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:textColor="@color/mediabrowser_text_color"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/folder_title"
        android:layout_width="@dimen/mediabrowser_item_layout_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="-9dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="@dimen/mediabrowser_folder_margin_bottom"
        android:maxLines="2"
        android:layout_below="@+id/special_img_folder_icon"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
