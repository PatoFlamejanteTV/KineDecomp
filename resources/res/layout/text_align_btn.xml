<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/separator"
        android:background="@color/pedit_background_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/textAlignLeft"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="16.9dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/text_align_left_icon"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>
        <View
            android:background="@color/pedit_background_color"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/textAlignCenter"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="16.9dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/text_align_center_icon"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>
        <View
            android:background="@color/pedit_background_color"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/textAlignRight"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="16.9dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/text_align_right_icon"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
