<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/timeline_trackheader_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/big_icon_view"
        android:padding="3dp"
        android:layout_width="22.7dp"
        android:layout_height="22.7dp"
        android:layout_centerInParent="true"/>
    <RelativeLayout
        android:id="@+id/small_icon_holder"
        android:layout_width="22.7dp"
        android:layout_height="22.7dp"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/small_icon_1"
            android:padding="1dp"
            android:layout_width="13.3dp"
            android:layout_height="13.3dp"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/small_icon_2"
            android:padding="1dp"
            android:layout_width="13.3dp"
            android:layout_height="13.3dp"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
