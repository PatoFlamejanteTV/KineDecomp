<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:n="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/optmenu_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/option_menu_list_header"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_gravity="left"
                android:paddingLeft="@dimen/blend_opacity_title_margin_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blending_opacity"/>
            <com.nexstreaming.kinemaster.ui.projectedit.Slider
                android:layout_gravity="center"
                android:id="@+id/opacityBar"
                android:paddingLeft="@dimen/blend_opacity_slider_margin_left"
                android:paddingTop="@dimen/blend_opacity_slider_margin_top"
                android:paddingRight="@dimen/blend_opacity_slider_margin_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                n:centerMark="false"
                n:defaultValue="100"
                n:maxValue="100"
                n:minValue="0"
                n:orientation="horizontal"
                n:snapAt="0"
                n:snapSize="@dimen/slider_snap_size"
                n:step="0.3921"
                n:thumbColor="@color/slider_dark_thumb"
                n:thumbRadius="@dimen/slider_thumb_radius"
                n:thumbTextSize="@dimen/slider_thumb_text_size"
                n:trackActiveColor="@color/slider_dark_track_active"
                n:trackDefaultColor="@color/slider_dark_track_base"
                n:trackSize="@dimen/slider_track_size"
                n:value="0"
                n:valueStyle="persent"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">
        <ListView
            android:id="@+id/optionMenuList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/optmenu_background_color"
            android:divider="@color/pedit_background_color"
            android:dividerHeight="1dp"
            android:choiceMode="singleChoice"/>
        <ImageView
            android:id="@+id/listViewDirectionUp"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_list_arrow_top"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/listViewDirectionDown"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_list_arrow_bottom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <View
        android:background="@color/duration_spinner_topline"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</LinearLayout>
