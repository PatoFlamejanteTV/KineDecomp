<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/export_layout_bg_color"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <TextView
            android:theme="@style/ShadowTextView"
            android:textSize="@dimen/export_page_big_text_size"
            android:textStyle="bold"
            android:textColor="@color/km_white"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:textColor="@color/km_white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/cancel_button"
            android:background="@drawable/bg_dark_gray_button"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:minHeight="36dp"
            android:text="@string/button_cancel"/>
        <Button
            android:textColor="@color/km_white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ok_button"
            android:background="@drawable/bg_dark_gray_button"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:minHeight="36dp"
            android:text="@string/button_ok"/>
    </LinearLayout>
</LinearLayout>
