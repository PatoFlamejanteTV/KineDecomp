<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/toolbar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/km_slate_dark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">
        <ImageView
            android:id="@+id/toolbar_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_settings_title_logo"
            android:scaleType="centerInside"/>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16dp"
            android:textColor="@color/km_white"
            android:ellipsize="end"
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"/>
        <ImageView
            android:id="@+id/toolbar_arrow"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:src="@drawable/icon_toolbar_subtitle"
            android:scaleType="centerInside"/>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16dp"
            android:textColor="@color/km_red"
            android:ellipsize="end"
            android:id="@+id/toolbar_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"/>
    </LinearLayout>
    <View
        android:background="@color/km_red"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
