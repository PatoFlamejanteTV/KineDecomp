<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/adobe_csdk_fragment_asset_detail_padding_left"
    android:layout_width="match_parent"
    android:layout_height="54dp">
    <ImageView
        android:id="@+id/adobe_csdk_assetview_upload_failed_asset_item_image"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:scaleType="centerCrop"/>
    <com.adobe.creativesdk.foundation.internal.utils.CreativeSDKTextView
        android:textSize="@dimen/adobe_csdk_fragment_asset_detail_small_text"
        android:textColor="@android:color/black"
        android:ellipsize="middle"
        android:id="@+id/adobe_csdk_assetview_upload_failed_asset_item_name"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"/>
</LinearLayout>
