<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="4dp"
    android:layout_width="@dimen/share_popup_width"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/top_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridView
            android:gravity="center"
            android:id="@+id/top_share_targets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/share_popup_gridview_tb_margin"
            android:layout_marginBottom="@dimen/share_popup_gridview_tb_margin"
            android:numColumns="4"/>
        <View
            android:background="#d7d7d7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/top_share_targets"/>
    </RelativeLayout>
    <GridView
        android:gravity="center"
        android:id="@+id/bottom_share_targets"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/share_popup_gridview_tb_margin"
        android:layout_marginBottom="@dimen/share_popup_gridview_tb_margin"
        android:stretchMode="columnWidth"
        android:numColumns="4"/>
</LinearLayout>
