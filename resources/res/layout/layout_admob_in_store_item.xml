<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.UnifiedNativeAdView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/ad_thumbnail_viewgroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_above="@+id/appinstall_call_to_action">
            <com.google.android.gms.ads.formats.MediaView
                android:id="@+id/appinstall_media"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="9dp"
                android:textStyle="bold"
                android:textColor="@color/km_white"
                android:gravity="center"
                android:id="@+id/appinstall_headline"
                android:background="#80000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/appinstall_media"
                android:textAllCaps="true"/>
        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ad_badge"
            android:background="@color/km_white"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ad_badge"/>
        <com.nexstreaming.kinemaster.ui.widget.TransparentTextButton
            android:textSize="12dp"
            android:textColor="#ff545960"
            android:gravity="center"
            android:id="@+id/appinstall_call_to_action"
            android:background="@android:color/white"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            app:borderColor="dark_gray"/>
    </RelativeLayout>
</com.google.android.gms.ads.formats.UnifiedNativeAdView>
