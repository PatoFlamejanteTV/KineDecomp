<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:nex="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.nexstreaming.kinemaster.ui.widget.Toolbar
        android:id="@+id/toolbar_text_input"
        android:background="@color/toolbar_background_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        nex:titleMode="title"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/linear_input_text_body"
        android:background="@android:color/transparent"
        android:paddingTop="@dimen/toolbar_height"
        android:paddingBottom="@dimen/new_project_bottombar_height"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/editText_new_project_opening"
            android:background="@drawable/layout_edit_text_background_selector"
            android:padding="7dp"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:hint="@string/new_project_opening_title_hint"
            android:singleLine="true"
            style="KineMaster.EditText"/>
        <EditText
            android:id="@+id/editText_new_project_middle"
            android:background="@drawable/layout_edit_text_background_selector"
            android:padding="7dp"
            android:visibility="visible"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:hint="@string/template_midtitle_hint"
            android:singleLine="true"
            style="KineMaster.EditText"/>
        <EditText
            android:id="@+id/editText_new_project_ending"
            android:background="@drawable/layout_edit_text_background_selector"
            android:padding="7dp"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:hint="@string/new_project_closing_title_hint"
            android:singleLine="true"
            style="KineMaster.EditText"/>
    </LinearLayout>
</FrameLayout>
