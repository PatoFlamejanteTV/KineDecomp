<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/root"
    android:fitsSystemWindows="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <View
        android:background="@drawable/bg_gdpr_dialog_top"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <androidx.core.widget.NestedScrollView
        android:theme="@style/GDPRScrollView"
        android:id="@+id/scroll"
        android:layout_width="@dimen/gdpr_popup_width"
        android:layout_height="@dimen/gdpr_firebase_scrollview_height">
        <LinearLayout
            android:orientation="vertical"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/gdpr_popup_text_color"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:text="@string/GDPR_Firebase_check_popup_title"/>
            <TextView
                android:textSize="14dp"
                android:textColor="@color/gdpr_popup_text_color"
                android:textColorLink="@color/gdprLinkColor"
                android:id="@+id/content"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            android:textColor="@color/km_white"
            android:layout_gravity="center"
            android:id="@+id/ok_button"
            android:background="@drawable/bg_red_button"
            android:layout_width="170dp"
            android:layout_height="33dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:text="@string/agree_and_continue"/>
        <Button
            android:textColor="@color/km_white"
            android:layout_gravity="center"
            android:id="@+id/cancel_button"
            android:background="@drawable/bg_dark_gray_button"
            android:layout_width="170dp"
            android:layout_height="33dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:text="@string/button_cancel"/>
    </LinearLayout>
</LinearLayout>
