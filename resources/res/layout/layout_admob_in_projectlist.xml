<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.UnifiedNativeAdView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ad_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/project_gallery_adview_selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.gms.ads.formats.MediaView
            android:layout_gravity="center_horizontal"
            android:id="@+id/appinstall_media"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ad_badge"
            android:layout_width="@dimen/project_gallery_ad_badge_width"
            android:layout_height="@dimen/project_gallery_ad_badge_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ad_badge"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/headline_holder"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/appinstall_call_to_action"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="@dimen/pl_adview_headline_text_size"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/appinstall_headline"
                android:background="#8f3c3c3c"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"/>
        </LinearLayout>
        <com.nexstreaming.kinemaster.ui.widget.TransparentTextButton
            android:textSize="@dimen/project_gallery_ad_text_size"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@+id/appinstall_call_to_action"
            android:background="#8f3c3c3c"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="@dimen/project_gallery_ad_textbutton_height"
            android:layout_margin="1dp"
            android:text="@string/btn_remove"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"/>
    </RelativeLayout>
</com.google.android.gms.ads.formats.UnifiedNativeAdView>
