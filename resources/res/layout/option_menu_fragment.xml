<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/optmenu_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/option_menu_list_header"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/optionMenuList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@drawable/option_menu_list_item_background"
            android:cacheColorHint="@color/optmenu_background_color"
            android:divider="@color/pedit_background_color"
            android:dividerHeight="0dp"
            android:choiceMode="singleChoice"/>
    </RelativeLayout>
</LinearLayout>
