<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/optmenu_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/option_menu_list_header"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">
        <ListView
            android:id="@+id/optionMenuList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/optmenu_background_color"
            android:divider="@color/pedit_background_color"
            android:dividerHeight="1dp"
            android:choiceMode="singleChoice"/>
        <ImageView
            android:id="@+id/listViewDirectionUp"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_list_arrow_top"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/listViewDirectionDown"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_list_arrow_bottom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <View
        android:background="@color/duration_spinner_topline"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <com.nexstreaming.kinemaster.ui.widget.DurationSpinner
        android:id="@+id/durationSpinner"
        android:background="@color/duration_spinner_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/duration_spinner_height"
        app:textColor="@color/duration_spinner_text"/>
</LinearLayout>
