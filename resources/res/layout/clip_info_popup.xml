<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/clip_info_popup_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:id="@+id/container"
        android:clickable="true"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/km_white"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/km_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/km_slate_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_information_category_title"/>
            </LinearLayout>
            <View
                android:background="@drawable/n2_settings_h_divider"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                android:layout_weight="1">
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/km_slate_dark"
                        android:textColorHint="#a4a4a4"
                        android:gravity="center_vertical"
                        android:id="@+id/label"
                        android:tag="binding_1"
                        android:background="@drawable/bg_info_popup_title"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/label_placeholder_title"/>
                    <TextView
                        android:textColor="@color/km_slate_dark"
                        android:id="@+id/detail"
                        android:tag="binding_2"
                        android:paddingTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </ScrollView>
            <View
                android:background="@drawable/n2_settings_h_divider"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/ok"
                android:tag="binding_3"
                android:background="@drawable/bg_info_popup_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height">
                <TextView
                    android:textColor="@color/km_slate_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_ok"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>
