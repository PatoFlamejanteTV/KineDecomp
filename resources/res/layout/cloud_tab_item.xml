<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="top"
    android:background="@color/adobe_csdk_asset_ux_drawerBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/adobe_csdk_asset_ux_card_corner_radius"
    card_view:cardElevation="@dimen/adobe_csdk_asset_ux_card_elevation">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="left"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/adobe_csdk_cloudpicker_icon_padding_left"
            android:paddingRight="16dp"
            android:layout_width="0dp"
            android:layout_height="@dimen/adobe_csdk_cloudpicker_tab_height"
            android:layout_weight="5">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/adobe_csdk_cloud_icon_image"
                android:layout_width="@dimen/adobe_csdk_cloudpicker_icon_size"
                android:layout_height="@dimen/adobe_csdk_cloudpicker_icon_size"
                android:scaleType="centerInside"/>
            <TextView
                android:textSize="20sp"
                android:textColor="@color/adobe_csdk_asset_ux_settings_dark_text"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_gravity="left"
                android:id="@+id/adobe_csdk_cloud_name"
                android:paddingLeft="@dimen/adobe_csdk_cloudpicker_cloudname_padding_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="@dimen/adobe_csdk_cloudpicker_defaultcloud_checkmark_padding_right"
            android:layout_width="0dp"
            android:layout_height="@dimen/adobe_csdk_cloudpicker_tab_height"
            android:layout_weight="1">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/adobe_csdk_Default_Cloud_selector"
                android:layout_width="@dimen/adobe_csdk_cloudpicker_defaultcloud_checkmark_size"
                android:layout_height="@dimen/adobe_csdk_cloudpicker_defaultcloud_checkmark_size"
                android:src="@drawable/ic_done_grey600_24dp"
                android:scaleType="centerInside"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
