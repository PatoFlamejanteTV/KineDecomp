<?xml version="1.0" encoding="utf-8"?>
<com.nexstreaming.kinemaster.ui.store.view.AssetCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/assetCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/km_white"
    app:cardBedgeSrc="@drawable/badge_new"
    app:cardCornerRadius="3dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="false">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.nexstreaming.kinemaster.ui.store.view.AssetThumbnailView
                android:id="@+id/thumb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:aspectMode="fourthirds"
                app:border="0.5dp"
                app:placeholder="@drawable/ic_asset_loading"
                app:radius="3dp"/>
            <TextView
                android:textSize="@dimen/asset_store_item_premium_text_size"
                android:textStyle="bold"
                android:textColor="@color/km_white"
                android:id="@+id/premium"
                android:background="@drawable/bg_rounded"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:maxLines="1"
                android:layout_alignRight="@+id/thumb"
                android:layout_alignBottom="@+id/thumb"
                android:textAllCaps="true"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/thumb">
                <TextView
                    android:textSize="@dimen/asset_store_item_name_text_size"
                    android:textColor="#ff53595f"
                    android:ellipsize="end"
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/asset_item_selection"
            android:background="@drawable/recyclerview_item_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</com.nexstreaming.kinemaster.ui.store.view.AssetCardView>
