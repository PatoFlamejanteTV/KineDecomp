<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/timeline3_itemCornerRadius"
    app:cardElevation="0dp">
    <com.nexstreaming.kinemaster.ui.widget.TimelineItemLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.nexstreaming.kinemaster.ui.widget.ClipThumbView
            android:id="@+id/thumbnail_view"
            android:background="@color/layer_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:background="@drawable/clip_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:id="@+id/clip_info_holder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/clip_icon_margin_lr"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/clip_type_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/clip_icon_margin_lr"
                android:src="@drawable/n3_timeline_clip_video"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:textSize="12dp"
                android:typeface="sans"
                android:textColor="@color/km_white"
                android:ellipsize="middle"
                android:id="@+id/clip_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0x"
                android:maxLines="1"
                android:singleLine="true"
                android:shadowColor="@android:color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3"
                android:layout_toRightOf="@+id/clip_type_icon"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/pin_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pin_dark"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <com.nexstreaming.kinemaster.ui.widget.OverLimitView
            android:id="@+id/over_limit_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.nexstreaming.kinemaster.ui.widget.KeyFrameDrawingView
            android:id="@+id/key_frame_drawing_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.nexstreaming.kinemaster.ui.widget.TimelineItemLayout>
</androidx.cardview.widget.CardView>
