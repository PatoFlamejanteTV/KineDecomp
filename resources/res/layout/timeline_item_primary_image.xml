<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#000000"
    app:cardCornerRadius="@dimen/timeline3_itemCornerRadius"
    app:cardElevation="0dp"
    app:contentPadding="0.7dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.nexstreaming.kinemaster.ui.widget.ClipThumbView
            android:id="@+id/thumbnail_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:background="@drawable/clip_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:id="@+id/clip_info_holder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/clip_icon_margin_lr"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true">
            <ImageView
                android:id="@+id/clip_type_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/clip_icon_margin_lr"
                android:layout_marginBottom="@dimen/clip_icon_margin_lr"
                android:src="@drawable/n3_timeline_clip_video"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:textSize="10dp"
                android:typeface="sans"
                android:textColor="@color/km_white"
                android:id="@+id/playback_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0x"
                android:shadowColor="@android:color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3"
                android:layout_toRightOf="@+id/clip_type_icon"
                android:layout_alignTop="@+id/clip_type_icon"
                android:layout_alignBottom="@+id/clip_type_icon"/>
            <ImageView
                android:id="@+id/mute_icon"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/n3_timeline_clip_muteaudio"
                android:layout_below="@+id/clip_type_icon"/>
        </RelativeLayout>
        <com.nexstreaming.kinemaster.ui.widget.FXGripDrawingView
            android:id="@+id/fx_grip_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.nexstreaming.kinemaster.ui.projectedit.timeline.MediaPrepView
            android:id="@+id/media_prep_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
