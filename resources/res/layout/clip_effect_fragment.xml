<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:n="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/optmenu_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/option_menu_list_header"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/defaultViewHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/noneBtnHolder"
                    android:background="@drawable/btn_background_img"
                    android:visibility="gone"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="5dp">
                    <com.nexstreaming.app.general.util.IconView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/list_icon"
                        n:iconColor="@color/icon_color"/>
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/icon_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Effect List"/>
                </LinearLayout>
                <ImageView
                    android:layout_gravity="center"
                    android:background="@color/slider_dark_track_base"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <TextView
                    android:textSize="12dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Recommend"/>
                <ImageView
                    android:layout_gravity="center"
                    android:background="@color/slider_dark_track_base"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
            </LinearLayout>
        </ScrollView>
        <ListView
            android:id="@+id/effectListView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/slider_dark_track_base"
            android:dividerHeight="0.5dp"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/effectViewHolder"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/effectBtnHolder"
                android:background="@drawable/btn_background_img"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="5dp">
                <ImageView
                    android:id="@+id/effectIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/test_icon"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/icon_color"
                    android:ellipsize="end"
                    android:id="@+id/effectName"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Effect List"
                    android:singleLine="true"/>
                <com.nexstreaming.app.general.util.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/list_icon"
                    n:iconColor="@color/icon_color"/>
            </LinearLayout>
            <ImageView
                android:layout_gravity="center"
                android:background="@color/slider_dark_track_base"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/effectSettingsHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.nexstreaming.kinemaster.ui.widget.DurationSpinner
                android:id="@+id/durationSpinner"
                android:background="@color/duration_spinner_bg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/duration_spinner_height"
                n:textColor="@color/duration_spinner_text"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
