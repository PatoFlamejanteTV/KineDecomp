<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">
    <com.nexstreaming.kinemaster.ui.store.view.AssetCardView
        android:id="@+id/assetCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/km_white"
        app:cardCornerRadius="3dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="false">
        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/ad_imageview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.nexstreaming.kinemaster.ui.store.view.AssetThumbnailView
                    android:background="@color/km_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:aspectMode="fourthirds"
                    app:border="0.5dp"
                    app:placeholder="@drawable/ic_asset_loading"
                    app:radius="3dp"/>
                <FrameLayout
                    android:id="@+id/ad_container"
                    android:background="@color/km_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/ad_imageview">
                <TextView
                    android:textSize="@dimen/asset_store_item_name_text_size"
                    android:textColor="#ff545960"
                    android:gravity="center"
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/advertisement"
                    android:layout_weight="1"
                    android:textAlignment="center"/>
            </LinearLayout>
        </RelativeLayout>
    </com.nexstreaming.kinemaster.ui.store.view.AssetCardView>
</FrameLayout>
