<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/new_project_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageView"
        android:layout_width="@dimen/frag_kine_info_logo_width"
        android:layout_height="@dimen/frag_kine_info_logo_height"
        android:src="@drawable/img_help_support_logo"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <TextView
        android:textSize="@dimen/frag_kine_info_text_size_b"
        android:textColor="@color/km_white"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView_setting_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/frag_kine_info_text_size_b"
        android:textColor="@color/km_med_cool_gray"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView_setting_engine_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="@dimen/frag_kine_info_text_size_b"
        android:textColor="@color/km_med_cool_gray"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView_setting_expires"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/frag_kine_info_text_size_s"
            android:textColor="@color/km_red"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textView_setting_license_infomation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_kinemaster_legal_info"/>
        <TextView
            android:background="@color/km_red"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"/>
        <TextView
            android:textSize="@dimen/frag_kine_info_text_size_s"
            android:textColor="@color/km_red"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textView_setting_privacy_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_kinemaster_privacy_info"/>
        <TextView
            android:background="@color/km_red"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"/>
        <TextView
            android:textSize="@dimen/frag_kine_info_text_size_s"
            android:textColor="@color/km_red"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textView_setting_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_kinemaster_terms_of_service"/>
    </LinearLayout>
</LinearLayout>
