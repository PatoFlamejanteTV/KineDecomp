<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_container"
    android:layout_width="@dimen/project_gallery_thumb_width"
    android:layout_height="@dimen/project_gallery_thumb_height"
    app:cardBackgroundColor="@color/project_gallery_item_loading"
    app:cardCornerRadius="4dp">
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/project_gallery_item_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/project_gallery_item_name_text_size"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:ellipsize="end"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="6"/>
        <FrameLayout
            android:id="@+id/detailTvHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/project_gallery_item_date_time_text_size"
                android:textColor="#ffffffff"
                android:layout_gravity="start"
                android:id="@+id/detailDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"/>
            <TextView
                android:textSize="@dimen/project_gallery_item_date_time_text_size"
                android:textColor="#ffffffff"
                android:layout_gravity="end"
                android:id="@+id/detailTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"/>
        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
