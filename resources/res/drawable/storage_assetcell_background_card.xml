<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:dither="true"
            android:shape="rectangle">
            <padding
                android:left="1px"
                android:right="1px"
                android:bottom="1px"/>
            <solid android:color="#ffffff"/>
            <stroke
                android:width="1px"
                android:color="#eceff0"/>
        </shape>
    </item>
    <item
        android:left="-2px"
        android:top="-2px"
        android:right="-2px">
        <shape
            android:dither="true"
            android:shape="rectangle">
            <padding android:bottom="1px"/>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="1px"
                android:color="#dbdedf"/>
        </shape>
    </item>
</layer-list>
