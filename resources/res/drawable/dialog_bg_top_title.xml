<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <inset android:insetTop="@dimen/dialog_corner_radius">
            <shape android:shape="rectangle">
                <corners
                    android:topLeftRadius="@dimen/dialog_corner_radius"
                    android:topRightRadius="@dimen/dialog_corner_radius"/>
                <solid android:color="@color/dialog_title_line"/>
            </shape>
        </inset>
    </item>
    <item>
        <inset android:insetBottom="1.6dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/dialog_bg"/>
                <corners
                    android:topLeftRadius="@dimen/dialog_corner_radius"
                    android:topRightRadius="@dimen/dialog_corner_radius"/>
            </shape>
        </inset>
    </item>
</layer-list>
