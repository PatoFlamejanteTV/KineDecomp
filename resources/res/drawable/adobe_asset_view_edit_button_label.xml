<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#e5e9ea"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item
        android:left="1dp"
        android:right="1dp"
        android:bottom="2dp">
        <shape>
            <solid android:color="@android:color/white"/>
            <padding
                android:left="16dp"
                android:top="4dp"
                android:right="16dp"
                android:bottom="4dp"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
</layer-list>
