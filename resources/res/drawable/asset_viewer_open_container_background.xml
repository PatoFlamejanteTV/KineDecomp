    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/adobe_csdk_actionbar_background"/>
        </shape>
    </item>
    <item
        android:left="-2dp"
        android:right="-2dp"
        android:bottom="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/adobe_csdk_actionbar_border"/>
            <solid android:color="#00000000"/>
            <padding android:bottom="1dp"/>
        </shape>
    </item>
</layer-list>
