<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#d5d5d5"/>
            <stroke
                android:width="0dp"
                android:color="#d5d5d5"/>
            <corners android:radius="5dp"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#8c8c8c"/>
            <stroke
                android:width="0dp"
                android:color="#8c8c8c"/>
            <corners android:radius="5dp"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="#d5d5d5"/>
            <stroke
                android:width="0dp"
                android:color="#d5d5d5"/>
            <corners android:radius="5dp"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#ffffff"/>
            <stroke
                android:width="0dp"
                android:color="#ffffff"/>
            <corners android:radius="5dp"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
        </shape>
    </item>
</selector>
