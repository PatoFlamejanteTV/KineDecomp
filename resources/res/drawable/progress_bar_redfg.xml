<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <gradient
                android:startColor="@color/km_slate_extradark"
                android:endColor="@color/km_slate_extradark"
                android:centerColor="@color/km_slate_extradark"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="2dp"/>
                <gradient
                    android:startColor="@color/km_red"
                    android:endColor="@color/km_red"/>
            </shape>
        </clip>
    </item>
</layer-list>
