        android:right="@dimen/split_screen_button_content_padding"
        android:bottom="@dimen/split_screen_button_content_padding">
        <shape android:shape="rectangle">
            <corners android:radius="1dp"/>
            <solid android:color="@color/opt_splitscreen_icon_fill"/>
