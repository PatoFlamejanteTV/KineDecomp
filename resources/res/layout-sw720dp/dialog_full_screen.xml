<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#d9131516"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="40sp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@+id/main_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/reverse_dialog_title_doing"
            app:layout_constraintHeight_percent="0.049"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.153"/>
        <TextView
            android:textSize="22.7sp"
            android:textColor="#ffffffff"
            android:ellipsize="end"
            android:gravity="top|center_horizontal"
            android:id="@+id/main_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="47.3dp"
            android:text="@string/reverse_dialog_message_doing"
            android:maxLines="4"
            app:layout_constraintHeight_percent="0.033"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_title"
            app:layout_constraintWidth_percent="0.81"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/progress_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="54.7dp"
            android:progressDrawable="@drawable/export_progress_bar"
            app:layout_constraintHeight_percent="0.02"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_message"
            app:layout_constraintWidth_percent="0.625"
            style="?android:attr/progressBarStyleHorizontal"/>
        <com.nexstreaming.kinemaster.ui.widget.TransparentTextButton
            android:textSize="26.7sp"
            android:textColor="@color/project_gallery_details_text_color"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/cancel_button"
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="78.7dp"
            android:minHeight="76.7dp"
            android:text="@string/button_cancel"
            android:shadowColor="@color/project_gallery_details_text_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar"
            app:layout_constraintWidth_percent="0.312"/>
        <com.nexstreaming.kinemaster.ui.widget.TransparentTextButton
            android:textSize="26.7sp"
            android:textColor="@color/project_gallery_details_text_color"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/close_button"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="78.7dp"
            android:minHeight="76.7dp"
            android:text="@string/reverse_dialog_close"
            android:shadowColor="@color/project_gallery_details_text_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar"
            app:layout_constraintWidth_percent="0.312"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
