<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/upload_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/upload_toolbar"
            android:background="@color/adobe_loki_app_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/adobe_csdk_action_bar_size"
            android:contentInsetStart="72dp"
            app:contentInsetStart="72dp"
            app:popupTheme="@style/AdobeCSDKPopUpStyle"
            app:theme="@style/AdobeCSDKThemeActionBarLoki">
            <com.adobe.creativesdk.foundation.internal.utils.CreativeSDKTextView
                android:textSize="@dimen/adobe_csdk_actionBar_text_size"
                android:textColor="@color/adobe_csdk_theme_color_actionbar_background"
                android:ellipsize="middle"
                android:id="@+id/adobe_csdk_actionbar_title_upload"
                android:paddingBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_activity_title_running"
                android:maxLines="1"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/adobe_uploading_tasks_RecyclerView"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload_appbar"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/adobe_uploads_history_RecyclerView"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adobe_uploading_tasks_RecyclerView"/>
    <RelativeLayout
        android:id="@+id/uploads_empty_state_view"
        android:background="@color/adobe_csdk_background_color"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/upload_appbar">
        <com.adobe.creativesdk.foundation.internal.utils.CreativeSDKTextView
            android:textSize="@dimen/adobe_csdk_storage_empty_state_view_textSize"
            android:textColor="@color/adobe_csdk_asset_browser_light_text"
            android:id="@+id/adobe_csdk_photo_asset_browser_empty_state_message"
            android:paddingTop="@dimen/adobe_csdk_storage_empty_state_view_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adobe_csdk_no_active_uploads"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
